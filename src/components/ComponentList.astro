---
import ComponentLink from "./ComponentLink.astro";
import {
  navComponents,
  cardComponents,
  heroComponents,
  formComponents,
} from "../components";
import ComponentCategory from "./ComponentCategory.astro";
---

<section
  transition:persist
  class="mr-auto w-1/4 h-full min-h-[100vh] flex flex-col font-semibold text-lg">
  <ComponentLink name="Home" link="/" />
  <ComponentCategory name="Navigation" />
  {
    navComponents.map((component) => {
      return (
        <ComponentLink
          name={component.name}
          link={component.link}
        />
      );
    })
  }
  <ComponentCategory name="Cards" />
  {
    cardComponents.map((component) => {
      return (
        <ComponentLink
          name={component.name}
          link={component.link}
        />
      );
    })
  }

  <ComponentCategory name="Heros" />
  {
    heroComponents.map((component) => {
      return (
        <ComponentLink
          name={component.name}
          link={component.link}
        />
      );
    })
  }

  <ComponentCategory name="Forms" />
  {
    formComponents.map((component) => {
      return (
        <ComponentLink
          name={component.name}
          link={component.link}
        />
      );
    })
  }
</section>
