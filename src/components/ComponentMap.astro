---
import ComponentLink from "./ComponentLink.astro";
import {
  navComponents,
  cardComponents,
  heroComponents,
  formComponents,
  buttonComponents,
} from "../components";
import ComponentCategory from "./ComponentCategory.astro";
---

<ComponentLink name="Home" link="/" />
<ComponentCategory name="Navigation" />
{
  navComponents.map((component) => {
    return (
      <ComponentLink
        name={component.name}
        link={component.link}
      />
    );
  })
}
<ComponentCategory name="Cards" />
{
  cardComponents.map((component) => {
    return (
      <ComponentLink
        name={component.name}
        link={component.link}
      />
    );
  })
}

