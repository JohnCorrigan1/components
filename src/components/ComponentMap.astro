---
import ComponentLink from "./ComponentLink.astro";
import {
  navComponents,
  cardComponents,
  heroComponents,
  formComponents,
  buttonComponents,
} from "../components";
import ComponentCategory from "./ComponentCategory.astro";
---

<a
  href="/"
  class="text-white py-5 pt-10 w-full text-center hover:text-emerald-500 text-xl font-semibold"
  >Home</a
>
<ComponentCategory name="Navigation" />
{
  navComponents.map((component) => {
    return (
      <ComponentLink
        name={component.name}
        link={component.link}
      />
    );
  })
}
<ComponentCategory name="Cards" />
{
  cardComponents.map((component) => {
    return (
      <ComponentLink
        name={component.name}
        link={component.link}
      />
    );
  })
}

