---
import Navbar from "./Previews/Navbar.astro";
import Card from "./Previews/Card.astro";
import FullImageCard from "./Previews/FullImageCard.astro";

const { component } = Astro.props;
const componentData = [component.replace(/"/g, "")];
---

{
  componentData.map((componentt: string) => {
    switch (component) {
      case "Navbar":
        return <Navbar {...component} />;
      case "Card":
        return (
          <div class="w-full flex justify-center">
            <Card {...component} />
          </div>
        );
      case "Full Image Card":
        return (
          <div class="w-full flex justify-center">
            <FullImageCard {...component} />
          </div>
        );
      default:
        return (
          <div class="w-full flex justify-center">
            <h1 class="text-white font-semibold p-5">
              No preview yet...
            </h1>
          </div>
        );
    }
  })
}
