---
import Layout from "../layouts/Layout.astro";
import ComponentList from "../components/ComponentList.astro";
---

<Layout title="Components">
  <main
    class="flex w-full min-w-[100vw] h-full max-w-[100vw]">
    <ComponentList />
    <section
      class="w-full h-full flex justify-center items-center p-20 flex-col gap-10">
      <h1
        class="text-transparent bg-clip-text bg-gradient-to-br from-emerald-600 to-teal-600 font-bold text-center max-w-[500px]">
        HTML & Tailwind code snippets
      </h1>
    </section>
  </main>
  <style>
    h1 {
      font-size: 3rem;
      line-height: 1.2;
      font-family: "Roboto", serif;
    }
  </style>
</Layout>
